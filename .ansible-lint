exclude_paths:
  - .cache/
  - .github/
  - molecule/
  - .ansible-lint
  - .yamllint
  - meta/
  - playbooks/roles/
  - plugins/filter/tmp*.py.yaml

rulesdir:
   - ../../../ansible-lint-custom-rules/rules/

enable_list:
  - fqcn-builtins  # opt-in
  - no-log-password  # opt-in

warn_list:
  - vars_in_vars_files_have_valid_names
  - experimental
  - ignore-errors
  - no-handler
  - fqcn-builtins
  - no-log-password
  - no-empty-data-files
  - fqcn[keyword]
  - no-free-form
  - run-once[task]
  - var-naming[no-role-prefix]
  - deprecated-command-syntax

skip_list:
  - vars_should_not_be_used
  - file_is_small_enough
  - file_has_valid_name
  - role_vars_start_with_role_name
  - jinja[spacing]
  - schema[meta]
  - name[template]
  - run_once[task]

use_default_rules: true
parseable: true
